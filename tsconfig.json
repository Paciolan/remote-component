{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true, // Generate corrresponding .map file
    "declaration": true, // Generate corresponding .d.ts file
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*.ts",
    "src/index.tsx",
    "src/createRemoteComponent.tsx",
    "src/models/index.tsx",
    "src/__tests__/createRemoteComponent.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ]
}